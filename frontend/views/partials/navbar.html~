<div ng-app="bookSearch" ng-controller="searchCtrl">
 
  <!-- The search box puts the term into $scope.searchTerm
       and calls $scope.search() on submit -->
  <section class="searchField">
    <form ng-submit="search()">
      <input type="text" ng-model="searchTerm">
      <input type="submit" value="Search for books">
    </form>
  </section>
 
  <!-- In results, we show a message if there are no results, and
       a list of results otherwise. -->
  <section class="results">
    <div class="no-books" ng-hide="books.length">No results</div>
 
    <!-- We show one of these elements for each book in $scope.books.
         The ng-cloak directive prevents our templates from showing on load. -->
    <article class="book" ng-repeat="book in books" ng-cloak>
      <h2>
         {{book.name}}
      </h2>
      <h4>Author: {{book.author}}</h4>
    <img ng-src="{{book.coverLocation}}">

    </article>
 
    <!-- We put a link that calls $scope.loadMore to load more recipes
         and append them to the results.-->
    <div class="load-more" ng-hide="allResults" ng-cloak>
      <a ng-click="loadMore()">More...</a>
    </div>
  </section>

 
    <div class="nav navbar-nav">
        <ul class="nav navbar-nav">
            <li ng-repeat="item in menu" ui-route="/{{item.link}}" ng-class="{active: $uiRoute}">
                <a ng-href="/#/{{item.link}}">{{item.title}}</a>
            </li>
            <li ng-repeat="item in authMenu" ng-show="currentUser" ui-route="/{{item.link}}" ng-class="{active: $uiRoute}">
                <a ng-href="/#/{{item.link}}">{{item.title}}</a>
            </li>
        </ul>
    </div>
    <div class="nav navbar-nav pull-right">
        <ul class="nav navbar-nav" ng-hide="currentUser">
            <li><a ng-href ="/#/login">Log In</a></li>
            <li><a ng-href="/#/signup">Sign up</a></li>
            
        </ul>
        <ul class="nav navbar-nav" ng-show="currentUser">
            <li class="dropdown">
                <a class="dropdown-toggle">Welcome, {{ currentUser.username }} <b class="caret"></b></a>
                <ul class="dropdown-menu">
                    <li><a ng-click="logout()"><span class="glyphicon-log-out"></span>Logout</a></li>
                </ul>
            </li>
        </ul>
    </div>
